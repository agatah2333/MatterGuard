{
  "cluster_id": "0x0201",
  "name": "Thermostat",
  "description": "This cluster provides an interface to the functionality of a thermostat.",
  "features": [
    {
      "bit": 0,
      "code": "HEAT",
      "name": "Heating",
      "conformance": "AUTO, O.a+",
      "summary": "Thermostat is capable of managing a heating device"
    },
    {
      "bit": 1,
      "code": "COOL",
      "name": "Cooling",
      "conformance": "AUTO, O.a+",
      "summary": "Thermostat is capable of managing a cooling device"
    },
    {
      "bit": 2,
      "code": "OCC",
      "name": "Occupancy",
      "conformance": "O",
      "summary": "Supports Occupied and Unoccupied setpoints"
    },
    {
      "bit": 3,
      "code": "SCH",
      "name": "ScheduleConfiguration",
      "conformance": "[Zigbee], D",
      "summary": "Supports remote configuration of a weekly schedule"
    },
    {
      "bit": 4,
      "code": "SB",
      "name": "Setback",
      "conformance": "O",
      "summary": "Supports configurable setback (or span)"
    },
    {
      "bit": 5,
      "code": "AUTO",
      "name": "AutoMode",
      "conformance": "O",
      "summary": "Supports a System Mode of Auto"
    },
    {
      "bit": 6,
      "code": "LTNE",
      "name": "LocalTemperatureNotExposed",
      "conformance": "O",
      "summary": "Thermostat does not expose the LocalTemperature Value in the LocalTemperature attribute"
    }
  ],
  "data_types": [
    {
      "name": "TemperatureDifference",
      "type": "int16",
      "description": "Represents a temperature difference with a resolution of 0.01°C. value = (temperature in °C) x 100"
    },
    {
      "name": "SignedTemperature",
      "type": "int8",
      "description": "Represents a temperature from -12.7°C to 12.7°C with a resolution of 0.1°C. value = (temperature in °C) x 10"
    },
    {
      "name": "UnsignedTemperature",
      "type": "uint8",
      "description": "Represents a temperature from 0°C to 25.5°C with a resolution of 0.1°C. value = (temperature in °C) x 10"
    },
    {
      "name": "ACErrorCodeBitmap",
      "type": "map32",
      "bits": [
        {
          "bit": 0,
          "name": "CompressorFail",
          "summary": "Compressor Failure or Refrigerant Leakage",
          "conformance": "M"
        },
        {
          "bit": 1,
          "name": "RoomSensorFail",
          "summary": "Room Temperature Sensor Failure",
          "conformance": "M"
        },
        {
          "bit": 2,
          "name": "OutdoorSensorFail",
          "summary": "Outdoor Temperature Sensor Failure",
          "conformance": "M"
        },
        {
          "bit": 3,
          "name": "CoilSensorFail",
          "summary": "Indoor Coil Temperature Sensor Failure",
          "conformance": "M"
        },
        {
          "bit": 4,
          "name": "FanFail",
          "summary": "Fan Failure",
          "conformance": "M"
        }
      ]
    },
    {
      "name": "AlarmCodeBitmap",
      "type": "map8",
      "bits": [
        {
          "bit": 0,
          "name": "Initialization",
          "summary": "Initialization failure. The device failed to complete initialization at power-up.",
          "conformance": "M"
        },
        {
          "bit": 1,
          "name": "Hardware",
          "summary": "Hardware failure",
          "conformance": "M"
        },
        {
          "bit": 2,
          "name": "SelfCalibration",
          "summary": "Self-calibration failure",
          "conformance": "M"
        }
      ]
    },
    {
      "name": "HVACSystemTypeBitmap",
      "type": "map8",
      "bits": [
        {
          "bit": "0..1",
          "name": "CoolingStage",
          "summary": "Stage of cooling the HVAC system is using.",
          "conformance": "M"
        },
        {
          "bit": "2..3",
          "name": "HeatingStage",
          "summary": "Stage of heating the HVAC system is using.",
          "conformance": "M"
        },
        {
          "bit": 4,
          "name": "HeatingIsHeatPump",
          "summary": "Is the heating type Heat Pump.",
          "conformance": "M"
        },
        {
          "bit": 5,
          "name": "HeatingUsesFuel",
          "summary": "Does the HVAC system use fuel.",
          "conformance": "M"
        }
      ]
    },
    {
      "name": "ProgrammingOperationModeBitmap",
      "type": "map8",
      "bits": [
        {
          "bit": 0,
          "name": "ScheduleActive",
          "summary": "Schedule programming mode. This enables any programmed weekly schedule configurations.",
          "conformance": "M"
        },
        {
          "bit": 1,
          "name": "AutoRecovery",
          "summary": "Auto/recovery mode",
          "conformance": "M"
        },
        {
          "bit": 2,
          "name": "Economy",
          "summary": "Economy/EnergyStar mode",
          "conformance": "M"
        }
      ]
    },
    {
      "name": "RelayStateBitmap",
