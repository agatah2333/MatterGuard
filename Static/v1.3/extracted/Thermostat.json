  "commands": [
    {
      "id": "0x00",
      "name": "SetpointRaiseLower",
      "direction": "client => server",
      "response": "Y",
      "access": "O",
      "conformance": "M",
      "fields": [
        {
          "id": 0,
          "name": "Mode",
          "type": "SetpointRaiseLowerModeEnum",
          "constraint": "desc",
          "conformance": "M"
        },
        {
          "id": 1,
          "name": "Amount",
          "type": "int8",
          "constraint": "all",
          "conformance": "M"
        }
      ]
    },
    {
      "id": "0x01",
      "name": "SetWeeklySchedule",
      "direction": "client => server",
      "response": "Y",
      "access": "M",
      "conformance": "SCH",
      "fields": [
        {
          "id": 0,
          "name": "NumberOfTransitionsForSequence",
          "type": "uint8",
          "constraint": "all",
          "conformance": "M"
        },
        {
          "id": 1,
          "name": "DayOfWeekForSequence",
          "type": "ScheduleDayOfWeekBitmap",
          "constraint": "desc",
          "conformance": "M"
        },
        {
          "id": 2,
          "name": "ModeForSequence",
          "type": "ScheduleModeBitmap",
          "constraint": "desc",
          "conformance": "M"
        },
        {
          "id": 3,
          "name": "Transitions",
          "type": "list[WeeklyScheduleTransitionStruct]",
          "constraint": "max 10",
          "conformance": "M"
        }
      ]
    },
    {
      "id": "0x02",
      "name": "GetWeeklySchedule",
      "direction": "client => server",
      "response": "GetWeeklyScheduleResponse",
      "access": "O",
      "conformance": "SCH"
    },
    {
      "id": "0x00",
      "name": "GetWeeklyScheduleResponse",
      "direction": "client <= server",
      "response": "N",
      "conformance": "SCH"
    },
    {
      "id": "0x03",
      "name": "ClearWeeklySchedule",
      "direction": "client => server",
      "response": "Y",
      "access": "M",
      "conformance": "SCH"
    },
    {
      "id": "0x04",
      "name": "GetRelayStatusLog",
      "direction": "client => server",
      "response": "GetRelayStatusLogResponse",
      "access": "O",
      "conformance": "[Zigbee]"
    },
    {
      "id": "0x01",
      "name": "GetRelayStatusLogResponse",
      "direction": "client <= server",
      "response": "N",
      "conformance": "[Zigbee]"
    }
