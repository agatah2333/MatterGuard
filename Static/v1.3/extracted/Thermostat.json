        {
          "bit": 1,
          "name": "Cool",
          "summary": "Cool State On",
          "conformance": "M"
        },
        {
          "bit": 2,
          "name": "Fan",
          "summary": "Fan State On",
          "conformance": "M"
        },
        {
          "bit": 3,
          "name": "HeatStage2",
          "summary": "Heat 2nd State On",
          "conformance": "M"
        },
        {
          "bit": 4,
          "name": "CoolStage2",
          "summary": "Cool 2nd State On",
          "conformance": "M"
        },
        {
          "bit": 5,
          "name": "FanStage2",
          "summary": "Fan 2nd Stage On",
          "conformance": "M"
        },
        {
          "bit": 6,
          "name": "FanStage3",
          "summary": "Fan 3rd Stage On",
          "conformance": "M"
        }
      ]
    },
    {
      "name": "RemoteSensingBitmap",
      "type": "map8",
      "bits": [
        {
          "bit": 0,
