    },
    {
      "name": "ScheduleModeBitmap",
      "type": "map8",
      "bits": [
        {
          "bit": 0,
          "name": "HeatSetpointPresent",
          "summary": "Adjust Heat Setpoint",
          "conformance": "M"
        },
        {
          "bit": 1,
          "name": "CoolSetpointPresent",
